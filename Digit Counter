#include<stdio.h>
#include<conio.h>
int main() {
    int n,a; // a :- count of number      n :- inputted number
    printf("Enter any Number :- ");
    scanf("%d",&n);
    if(n==0) {
        a=1;
    }
    else {
        for(a=0;n!=0;a++) {
            n=n/10;
        }
    }
    printf("Total Number of Digits :- %d\n",a);
    getch();
}
